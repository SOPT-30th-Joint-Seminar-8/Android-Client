<resources>
    <!-- Base application theme. -->
    <style name="Theme.Careerly_Android" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="careerly_title1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="careerly_title2">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="careerly_title3">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="careerly_body1">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="careerly_body2">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="careerly_subtitle1">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="careerly_subtitle2">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="share_circle">
        <item name="cornerSizeBottomRight">4dp</item>
        <item name="cornerSizeTopRight">4dp</item>
    </style>
</resources>